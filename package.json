{
  "name": "remarkers-indexer",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A DOT-721 NFT indexer",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Remarkers/Remarkers-Indexer.git"
  },
  "bugs": {
    "url": "https://github.com/Remarkers/Remarkers-Indexer/issues"
  },
  "homepage": "https://github.com/Remarkers/Remarkers-Indexer#readme",
  "files": [
    "dist"
  ],
  "keywords": [
    "polkadot",
    "nft",
    "dot-721"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "clean": "rimraf build && rimraf dist",
    "build": "swc ./src -d build",
    "build:watch": "swc ./src -d build -w",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "prettier": "prettier '**/*.{ts,json,md}'",
    "prettier:write": "prettier --write '**/*.{ts,json,md}'",
    "type-check": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "release": "semantic-release",
    "bundle": "unbuild"
  },
  "dependencies": {
    "@polkadot/api": "^10.11.3",
    "@polkadot/util-crypto": "^12.6.2",
    "@prisma/client": "5.10.2",
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@polkadot/types": "^10.12.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.2",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.21",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "3.2.5",
    "prisma": "^5.10.2",
    "regenerator-runtime": "^0.14.0",
    "rimraf": "5.0.5",
    "semantic-release": "^23.0.0",
    "ts-node": "^10.9.1",
    "typescript": "5.3.3",
    "unbuild": "^2.0.0"
  },
  "resolutions": {
    "wrap-ansi": "7.0.0"
  }
}
